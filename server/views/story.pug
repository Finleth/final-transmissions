html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        link(rel="stylesheet" href="assets/css/story.css")
        title= storyTitle
    body
        section#container
            .button-container
                a(href="/profile")
                    button.nav-btn Profile
                a(href="/library")
                    button.nav-btn Library
                a(href="/logout")
                    button.nav-btn Log Out
            h1.title= storyTitle
            .img-container
                img.story-img(src="assets/" + storyImg)
            a.go-link(href="/play")
                button.go-btn Go!
            .about
                p= storyBlurb
            p.time Estimated time: #{timeEstimate}
                h2 Chapters
                
                ol.chapters-list
                    each item in chapters
                        li.chapter= item
                    
            #map
            p.starting-point Starting Point:
            p.address 9200 Irvine Center Dr, Irvine, CA 92618

            
        script(src="assets/js/story.js")
        script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCXqyuEI8wFxFvczjGjlbim35FAuco0oCU&callback=initMap")
